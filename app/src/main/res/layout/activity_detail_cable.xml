<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.DetailCableActivity">

    <TextView
        android:id="@+id/title_cable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/image_cable"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/title_cable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@color/navy" />

    <TextView
        android:id="@+id/benefit_cable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benefits:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/image_cable"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/benefit_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benefit details go here."
        app:layout_constraintTop_toBottomOf="@id/benefit_cable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/specification_cable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specifications:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/benefit_description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/specification_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specification details go here."
        app:layout_constraintTop_toBottomOf="@id/specification_cable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/construction_cable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Construction:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/specification_description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/construction_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Construction details go here."
        app:layout_constraintTop_toBottomOf="@id/construction_cable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textColor="#666666" />
</androidx.constraintlayout.widget.ConstraintLayout>